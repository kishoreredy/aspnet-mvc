@*@using Videously.Models*@
@model Videously.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Approach - 1*@
@*<h2>@Model.Movie.Title</h2>*@
@*Approach - 2*@
@*<h2>@(((Movie)ViewData["Movie"]).Title)</h2>*@
@*Approach - 3*@
@*<h2>@ViewBag.Movie</h2>*@
@*First approach is proper and efficient to use*@


@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className">@Model.Movie.Title</h2>
@if (Model.Customers.Count == 0)
{
    <p>No one has rented this Movie</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
